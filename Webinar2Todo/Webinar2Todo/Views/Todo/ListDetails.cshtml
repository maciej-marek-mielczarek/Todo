@model Webinar2Todo.Application.ViewModels.TodoItemListVm
@{
    ViewData["Title"] = "ListDetails";
}

<h1>List Details</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Is Done</th>
            <th>Name</th>
            <th>Description</th>
            <th>Due Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
        <tr>
            <td>@item.IsCompleted</td>
            <td>@item.Task</td>
            <td>@item.Description</td>
            <td>@(item.DueDate.HasValue ? item.DueDate.Value.Date.ToShortDateString() : null)</td>
            <td><a asp-action="EditItem" asp-route-id="@item.Id">Edit</a> | <a asp-action="DeleteItemAndReturnToListDetails" asp-route-id="@item.Id">Delete</a></td>
        </tr>
        }
        </tbody>
    <tfoot>
        <tr>
            <td><a asp-action="CreateItem" asp-route-listId="@Model.ListId">Create new item</a></td>
            <td><a asp-action="RenameList" asp-route-id="@Model.ListId">Rename this List</a></td>
            <td><a asp-action="DeleteList" asp-route-id="@Model.ListId">Delete this entire List</a></td>
        </tr>
    </tfoot>
</table>

<div>
    <a asp-action="Index">Back to all lists</a>
</div>